TARGET_NAME = nrf24l01p_demo

C_SOURCES += $(MCULIB_PATH)/device/nrf24l01p/nrf24l01p.c
C_SOURCES += $(MCULIB_AVR_PATH)/src/nrf24l01p_platform_avr.c
