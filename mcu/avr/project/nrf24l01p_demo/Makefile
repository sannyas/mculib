export DEVICE = atmega16
export FCPU = 8000000


DEFINES +=  SERIAL_BAUD=115200 \
	SERIAL_DATABIT=8 \
	SERIAL_STOPBIT=1 \
	SERIAL_PARITYBIT=NONE \
	NRF24L01_PIN_CE=A0 \
	NRF24L01_PIN_CSN=A1 \
	NRF24L01_PIN_SCK=A2 \
	NRF24L01_PIN_MOSI=A3 \
	NRF24L01_PIN_MISO=A4

include $(MCULIB_AVR_PATH)/Makefile

